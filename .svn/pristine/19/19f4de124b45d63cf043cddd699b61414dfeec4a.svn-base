<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_subtitulo"
        style="@style/Subtitulo" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
          	android:layout_gravity="top"
            >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:stretchColumns="*" >

                <TableRow style="@style/HeadGrilla" >

                    <TextView
                        style="@style/TextoHeadGrilla"
                        android:text="Sku"
                        android:width="75dp" 
                      />

                    <TextView
                        style="@style/TextoHeadGrilla"
                        android:text="P. Mayorista"
                        android:width="120dp" 
                        />

                    <TextView
                        style="@style/TextoHeadGrilla"
                        android:text="P. Reventa"
                        android:width="100dp" 
                        
                        />

                    <TextView
                        style="@style/TextoHeadGrilla"
                        android:text="P. Oferta"
                        android:width="90dp" 
                        
                        />

                    <TextView
                        style="@style/TextoHeadGrilla"
                        android:text="M. Obs" 
                         android:width="130dp"
                        
                        />
                </TableRow>
            </TableLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableLayout
                    android:id="@+id/tl_reporte_precio_alicorp_mayoristas"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:stretchColumns="*" 
                    
                    >
                </TableLayout>
            </ScrollView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>